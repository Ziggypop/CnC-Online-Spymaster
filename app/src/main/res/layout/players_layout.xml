<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:descendantFocusability="beforeDescendants">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/outerLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/text"
            android:textSize="22sp"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>

        <View
            android:id="@+id/notify_marker"
            android:background="@drawable/notify_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>

        <View
            android:id="@+id/friend_marker"
            android:background="@drawable/friend_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>

        <View
            android:id="@+id/yourself_marker"
            android:background="@drawable/yourself_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />



    </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>