<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?android:attr/selectableItemBackground"
android:padding="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/ladder_stat_name"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>

<!--Spacing-->
<View
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/rank_one_vs_one"/>
    <TextView
        android:id="@+id/ladder_stat_rank_one_vs_one"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/ladder_win_loss"/>
    <TextView
        android:id="@+id/ladder_stat_win_over_loss"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/elo"/>
    <TextView
        android:id="@+id/ladder_stat_elo"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/games"/>
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/ladder_stat_games"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/wins"/>
    <TextView
        android:id="@+id/ladder_stat_wins"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/losses"/>
    <TextView
        android:id="@+id/ladder_stat_losses"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/disconnects"/>
    <TextView
        android:id="@+id/ladder_stat_disconnects"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_stats"
        android:text="@string/desyncs"/>
    <TextView
        android:id="@+id/ladder_stat_desyncs"
        android:textSize="@dimen/text_size_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>



</LinearLayout>